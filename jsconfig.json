{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "checkJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@hooks/*": ["src/hooks/*"],
      "@context/*": ["src/context/*"],
      "@constants": ["src/constants.js"],
      "@api": ["src/api/ApiService"],
      "app/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["./src/**/*", "./App.js"]
}
